<% provide(:title, t(".new_title")) %>
<h1><%= t(".new_title") %></h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user, url: signup_path, html: {class: "form-group"}) do |f| %>
    <%= render "shared/error_messages" %>
      <%= f.label t(".name") %>
      <%= f.text_field :name %>

      <%= f.label t(".email") %>
      <%= f.email_field :email %>

      <%= f.label t(".password") %>
      <%= f.password_field :password %>

      <%= f.label t(".password_confirmation") %>
      <%= f.password_field :password_confirmation %>

      <%= f.submit t(".create_account"), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
